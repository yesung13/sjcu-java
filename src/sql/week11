/*----------------19강---------------------------------------------*/
-- 1-1 주문하지 않은 고객의 이름(부속질의 사용)
SELECT NAME
FROM CUSTOMER
WHERE NAME NOT IN (SELECT NAME
                   FROM ORDERS O
                      , CUSTOMER C
                   WHERE O.CUSTID = C.CUSTID);

/*상관부속질의 사용*/
SELECT NAME
FROM CUSTOMER C1
WHERE NOT EXISTS(SELECT *
                 FROM ORDERS O
                    , CUSTOMER C
                 WHERE O.CUSTID = C1.CUSTID);

-- 1-2 주문 금액의 총액과 주문의 평균 금액
SELECT SUM(SALEPRICE)
     , AVG(SALEPRICE)
FROM ORDERS;

-- 1-3 고객의 이름과 고객별 구매액
SELECT C.NAME
     , SUM(O.SALEPRICE)
FROM ORDERS O
   , CUSTOMER C
WHERE O.CUSTID = C.CUSTID
GROUP BY C.NAME;

-- 1-4 고객의 이름과 고객이 구매한 도서 목록
SELECT C.NAME
     , B.BOOKNAME
FROM BOOK B
   , CUSTOMER C
   , ORDERS O
WHERE B.BOOKID = O.BOOKID
  AND C.CUSTID = O.CUSTID;

-- 1-5 도서의 가격과 판매가격의 차이가 가장 많은 주문*
SELECT *
FROM BOOK B,
     ORDERS O
WHERE B.BOOKID = O.BOOKID
  AND B.PRICE - O.SALEPRICE = (SELECT MAX(B.PRICE - O.SALEPRICE)
                               FROM BOOK B
                                  , ORDERS O
                               WHERE B.BOOKID = O.BOOKID);

-- 1-6 도서의 판매액 평균보다 자신의 구매액 평균이 더 높은 고객의 이름과 그 고객이 구매한 평균
SELECT C.NAME
     , AVG(O.SALEPRICE)
FROM CUSTOMER C
   , ORDERS O
WHERE C.CUSTID = O.CUSTID
GROUP BY C.NAME
HAVING AVG(O.SALEPRICE) > (SELECT AVG(SALEPRICE)
                           FROM ORDERS);

/*----------------20강---------------------------------------------*/
-- 2-1 박지성이 구매한 도서의 출판사와 같은 출판사에서 도서를 구매한 고객의 이름
SELECT C1.NAME
FROM BOOK B1
   , CUSTOMER C1
   , ORDERS O1
WHERE C1.CUSTID = O1.CUSTID
  AND B1.BOOKID = O1.BOOKID
  AND C1.NAME NOT LIKE '박지성'
  AND B1.PUBLISHER IN (SELECT B2.PUBLISHER
                       FROM BOOK B2
                          , CUSTOMER C2
                          , ORDERS O2
                       WHERE O2.CUSTID = C2.CUSTID
                         AND B2.BOOKID = O2.BOOKID
                         AND C2.NAME LIKE '박지성');

-- 2-2 두 개 이상의 서로 다른 출판사에서 도서를 구매한 고객의 이름
SELECT C1.NAME
FROM BOOK B1
   , CUSTOMER C1
   , ORDERS O1
WHERE C1.CUSTID = O1.CUSTID
  AND B1.BOOKID = O1.BOOKID
  AND B1.PUBLISHER IN (SELECT COUNT(DISTINCT B2.publisher), B2.bookname
                       FROM BOOK B2
                          , CUSTOMER C2
                          , ORDERS O2
                       WHERE O2.CUSTID = C2.CUSTID
                         AND B2.BOOKID = O2.BOOKID);

SELECT C2.NAME, B2.publisher
FROM BOOK B2
   , CUSTOMER C2
   , ORDERS O2
WHERE O2.CUSTID = C2.CUSTID
  AND B2.BOOKID = O2.BOOKID
GROUP BY NAME, publisher
;


-- 2-3 전체 고객의 30% 이상이 구매한 도서
